.searchContainer {
    padding: 0 20rpx;
}
.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}
.searchInput {
    position: relative;
    flex: 1;
    background-color: rgba(237,237,237,.3);
    border-radius: 30rpx;
}
.clear {
    position: absolute;
    z-index: 9;
    right: 30rpx;
    top:0;
    font-size: 30rpx;
}
.cancel {
    width: 100rpx;
    text-align: center;
}
.searchIcon {
    position: absolute;
    left: 15rpx;
}
.searchInput input {
    margin-left: 60rpx;
    height: 60rpx;
}
.placeholder {
    /* color: salmon; */
    font-size: 28rpx;
}
/* 热搜榜 */
.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee;
}
.hotList {
    display: flex;
    flex-wrap: wrap;
}
.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}
.hotItem .order {
    margin: 0 10rpx;
}
.hotItem image {
    width: 40rpx;
    height: 20rpx;
    margin-left: 10rpx;
}
/* 搜索内容展示 */
.searchContent {
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1rpx solid #d43c33;
}
.searchItem {
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
}
.content {
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}
/* 搜索历史 */
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
}
.history .title {
    font-size: 28rpx;
    margin-top: 16rpx;
}
.history .historyItem {
    font-size: 26rpx;
    background-color: #ededed;
    margin: 10rpx;
    padding: 0 30rpx;
    border-radius: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
}
.delete {
    position: absolute;
    bottom: 10rpx;
    right: 15rpx;
    font-size: 36rpx;
}